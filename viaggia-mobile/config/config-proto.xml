    </platform>
    <icon src="*resource_folder*/resources/android/icon/drawable-xhdpi-icon.png" />
    <platform name="android">
        <preference name="CodePushDeploymentKey" value="*android_key*" />
    </platform>
    <platform name="ios">
        <preference name="CodePushDeploymentKey" value="*ios_key*" />
    </platform>
  </widget>
