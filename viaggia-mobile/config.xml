<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="49" id="eu.trentorise.smartcampus.viaggiatrento" version="2.4.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Viaggia Trento</name>
    <description>Viaggia Trento</description>
    <author email="info@smartcommunitylab.it" href="http://www.smartcommunitylab.it/">Smart Community Lab</author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <access origin="*" />
    <access launch-external="yes" origin="sms:*" />
    <access launch-external="yes" origin="tel:*" />
    <access launch-external="yes" origin="mailto:*" />
    <access launch-external="yes" origin="geo:*" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <platform name="android">
        <preference name="StatusBarOverlaysWebView" value="false" />
        <icon density="ldpi" src="config/instances/TRENTO/resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="config/instances/TRENTO/resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="config/instances/TRENTO/resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="config/instances/TRENTO/resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="config/instances/TRENTO/resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="config/instances/TRENTO/resources/android/icon/drawable-xxxhdpi-icon.png" />
        <splash density="land-ldpi" src="config/instances/TRENTO/resources/android/splash/drawable-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="config/instances/TRENTO/resources/android/splash/drawable-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="config/instances/TRENTO/resources/android/splash/drawable-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="config/instances/TRENTO/resources/android/splash/drawable-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="config/instances/TRENTO/resources/android/splash/drawable-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="config/instances/TRENTO/resources/android/splash/drawable-land-xxxhdpi-screen.png" />
        <splash density="port-ldpi" src="config/instances/TRENTO/resources/android/splash/drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="config/instances/TRENTO/resources/android/splash/drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="config/instances/TRENTO/resources/android/splash/drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="config/instances/TRENTO/resources/android/splash/drawable-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="config/instances/TRENTO/resources/android/splash/drawable-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="config/instances/TRENTO/resources/android/splash/drawable-port-xxxhdpi-screen.png" />
    </platform>
    <platform name="ios">
        <preference name="StatusBarOverlaysWebView" value="true" />
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>need location access to find things nearby</string>
        </edit-config>
        <icon height="57" src="config/instances/TRENTO/resources/ios/icon/icon.png" width="57" />
        <icon height="114" src="config/instances/TRENTO/resources/ios/icon/icon@2x.png" width="114" />
        <icon height="40" src="config/instances/TRENTO/resources/ios/icon/icon-40.png" width="40" />
        <icon height="80" src="config/instances/TRENTO/resources/ios/icon/icon-40@2x.png" width="80" />
        <icon height="50" src="config/instances/TRENTO/resources/ios/icon/icon-50.png" width="50" />
        <icon height="100" src="config/instances/TRENTO/resources/ios/icon/icon-50@2x.png" width="100" />
        <icon height="60" src="config/instances/TRENTO/resources/ios/icon/icon-60.png" width="60" />
