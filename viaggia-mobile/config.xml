        <splash height="1242" src="config/instances/TRENTO/resources/ios/splash/Default-Landscape-736h.png" width="2208" />
        <splash height="1536" src="config/instances/TRENTO/resources/ios/splash/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="768" src="config/instances/TRENTO/resources/ios/splash/Default-Landscape~ipad.png" width="1024" />
        <splash height="2048" src="config/instances/TRENTO/resources/ios/splash/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" src="config/instances/TRENTO/resources/ios/splash/Default-Portrait~ipad.png" width="768" />
        <splash height="960" src="config/instances/TRENTO/resources/ios/splash/Default@2x~iphone.png" width="640" />
        <splash height="480" src="config/instances/TRENTO/resources/ios/splash/Default~iphone.png" width="320" />
    </platform>
    <icon src="config/instances/TRENTO/resources/android/icon/drawable-xhdpi-icon.png" />
    <chcp>
        <config-file url="https://hcp.smartcommunitylab.it/viaggia/trento/chcp.json" />
    </chcp>
    <engine name="android" spec="7.1.4" />
    <engine name="ios" spec="4.5.5" />
</widget>
